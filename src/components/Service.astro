---
import CheckIcon from "../icons/CheckIcon.astro";

const { services } = Astro.props;
const { subtitle, title, image, servicesList } = services;
---

<div class="services_section section_container">
  <article>
    <span class="outlined_subtitle blue">{subtitle}</span>
    <h3 class="h3">{title}</h3>
    <ul class="services_list">
      {
        servicesList.map((service: Text) => {
          return (
            <li>
              <div class="services__icon rounded_icon_container">
                <CheckIcon />
              </div>
              <p>{service}</p>
            </li>
          );
        })
      }
    </ul>
  </article>
  <img src={image} alt={title} />
</div>

<style>
  .services_section {
    gap: 4rem;
    display: grid;
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 350px), 1fr));
  }

  .services_section article h3 {
    margin-block: 1rem;
    font-size: 1.4rem;
  }

  .services_section .services_list li {
    gap: 0.5rem;
    display: flex;
    align-items: center;
    border-radius: 8px;
    font-size: var(--fs-5);
  }

  .services_list {
    display: grid;
    row-gap: 0.5rem;
  }

  .services__icon {
    width: 30px;
    height: 30px;
    background-color: var(--clr-white);
    border: 1px solid var(--clr-red-crayola);
    color: var(--clr-red-crayola);
  }

  .services__icon svg {
    color: var(--clr-red-crayola);
  }

  .services__icon,
  ul li:hover .services__icon {
    transition: 0.2s ease;
  }

  ul li:hover .services__icon {
    background-color: #ffe0e5;
  }
</style>
