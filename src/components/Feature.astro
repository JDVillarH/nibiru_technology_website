---
import ChevronRight from "../icons/ChevronRight.astro";

const { feature } = Astro.props;
---

<article class="feature_card">
  <div class="feature_icon">
    {(<feature.icon width="24" />)}
  </div>
  <div class="feature_text">
    <h3 class="h3">{feature.title}</h3>
    <p class="paragraph">{feature.description}</p>
  </div>
</article>

<style>
  .feature_card {
    padding: 1.25rem;
    gap: 1rem;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
  }
  .feature_card .feature_icon {
    background-color: #edf1ff;
    padding: 0.5rem;
    border-radius: 0.5rem;
    border: 1px solid #dee6ff;
  }

  .feature_card .feature_icon svg {
    color: #595bfb;
  }

  .feature_card .feature_text {
    display: grid;
    gap: 0.5rem;
  }

  .feature_card .feature_text p {
    font-size: var(--fs-5);
    line-height: 1.4rem;
  }
</style>
