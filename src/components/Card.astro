---
import TagIcon from "../icons/TagIcon.astro";
import CalendarIcon from "../icons/CalendarIcon.astro";

const { post } = Astro.props;
const { image, title, tags, link } = post;
---

<article>
  <figure class="card__figure">
    <a target="_blank" rel="noopener noreferrer" class="flex" href={link}>
      <img src={image} alt={title} loading="lazy" />
    </a>
  </figure>

  <div class="card__content">
    <small class="text-red-crayola"> {tags.category} </small>
    <a target="_blank" rel="noopener noreferrer" href={link}>{title}</a>
    <span>{tags.author}</span> â€¢ <span>{tags.date}</span>
  </div>
</article>

<style>
  .card__figure {
    border-radius: 0.375rem;
    overflow: hidden;

    img {
      width: 100%;
      transition: 0.3s ease-in-out;
    }

    &:hover img {
      object-position: top center;
      transform: scale(1.1);
      object-fit: cover;
    }
  }

  .card__content {
    padding: 0.5rem 0;

    a {
      display: block;
      font-size: var(--fs-4);
      line-height: 1.5rem;
      margin-bottom: 0.5rem;
    }

    span {
      vertical-align: middle;
      color: var(--clr-slate-500);
      font-size: var(--fs-small);
    }
  }
</style>
