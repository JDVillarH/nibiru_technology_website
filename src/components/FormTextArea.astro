---
const { placeholder, name } = Astro.props;
---

<label class="textarea_container">
  <textarea
    maxlength="500"
    name={name}
    required
    autocomplete="off"
    placeholder=""></textarea>
  <span>{placeholder}</span>
</label>

<style>
  .textarea_container {
    cursor: text;
    display: block;
    position: relative;
    border-radius: 6px;
    padding: 1rem 0.75rem;
    background-color: var(--clr-slate-100);
  }

  .textarea_container textarea {
    color: var(--clr-black-coral);
    font-size: var(--fs-5);
    resize: vertical;
    width: 100%;
    height: 5rem;
  }

  .textarea_container textarea:not(:placeholder-shown) ~ span {
    top: -0.5rem;
    left: 0.75rem;
    font-size: var(--fs-small);
    transition: 0.2s ease-in-out;
  }

  .textarea_container span {
    top: 1rem;
    left: 0.75rem;
    position: absolute;
    pointer-events: none;
    font-size: var(--fs-5);
    transition: 0.2s ease-in-out;
    color: var(--clr-black-coral);
  }
</style>
