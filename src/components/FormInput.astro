---
const { placeholder, type, name } = Astro.props;
---

<label class="input_container">
  <input type={type} name={name} required autocomplete="off" placeholder="" />
  <span>{placeholder}</span>
</label>

<style>
  label {
    display: block;
    position: relative;
  }

  label input {
    color: #000;
    padding: 0.75rem;
    border-radius: 6px;
    font-size: var(--fs-5);
    border: 1px solid #cbd5e1;
    width: 100%;
  }

  label input:not(:placeholder-shown) ~ span {
    top: -0.4rem;
    left: 0.75rem;
    font-size: 0.6rem;
    padding-inline: 0.3rem;
    transition: 0.2s ease-in-out;
    background-color: #fff;
  }

  label span {
    top: 0.75rem;
    left: 0.75rem;
    position: absolute;
    pointer-events: none;
    font-size: var(--fs-5);
    transition: 0.2s ease-in-out;
    color: var(--clr-black-coral);
  }
</style>
