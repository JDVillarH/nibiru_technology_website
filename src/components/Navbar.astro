---
import ChevronRight from "../icons/ChevronRight.astro";

const { navbarList } = Astro.props;
---

<nav class="navbar">
  <ul class="flex">
    {
      navbarList.map((item) => (
        <li>
          <a href={item.link}>{item.label}</a>
        </li>
      ))
    }
  </ul>
  <a href="#" class="navbar_button button blue">
    Get Started <ChevronRight width={24} />
  </a>
</nav>

<style>
  ul {
    gap: 0.75rem;
  }

  ul li a {
    font-size: var(--fs-5);
    color: var(--clr-black-coral);
    transition: color 0.2s ease-in-out;
  }

  ul li a:hover {
    transition: color 0.2s ease-in-out;
    color: var(--clr-red-crayola-600);
  }

  .navbar_button {
    display: none;
  }

  @media screen and (max-width: 1024px) {
    .navbar {
      display: none;
      justify-content: center;
      width: 100%;
      padding-block: 1.5rem;
    }

    .navbar.active {
      display: grid;
      justify-content: start;
    }

    ul {
      flex-direction: column;
    }

    .navbar_button {
      display: flex;
      margin-top: 1rem;
    }
  }
</style>
