---
import ChevronRight from "../icons/ChevronRight.astro";

const navbarList = [
  {
    label: "Home",
    link: "#",
  },
  {
    label: "Features",
    link: "#",
  },
  {
    label: "Service",
    link: "#",
  },
  {
    label: "Blog",
    link: "#",
  },
  {
    label: "Newsletter",
    link: "#",
  },
];
---

<nav class="navbar">
  <ul class="navbar__list">
    {
      navbarList.map((item) => (
        <li>
          <a class="navbar__link" href={item.link}>
            {item.label}
          </a>
        </li>
      ))
    }
  </ul>
  <div class="navbar__btn">
    <a href="#" class="btn">
      <span>Get Started</span>
      <ChevronRight />
    </a>
  </div>
</nav>

<style>
  .navbar__list {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 0.75rem;
  }

  .navbar__link {
    text-decoration: none;
    padding-inline: 0.75rem;
    padding-block: 0.5rem;
  }

  .navbar__btn {
    display: none;
  }

  @media screen and (max-width: 50em) {
    .navbar {
      display: none;
      position: fixed;
      inset: 7rem 1rem auto;
      padding: 1.5rem;
      border-radius: 0.5rem;
      background: var(--clr-white);
      box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.2)
    }

    .navbar.isOpen {
      display: block;
    }

    .navbar__btn {
      display: block;
      margin-top: 0.75rem;
      text-align: center;
    }

    .navbar__list {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
