---
import Card from "../components/Card.astro";

const postsList = [
  {
    image: "/images/blog-1.jpg",
    title: "How is technology working with new things?",
    tags: {
      category: "Technology",
      date: "25 Feb, 2022",
    },
  },
  {
    image: "/images/blog-2.jpg",
    title: "Top 10 important tips on IT services & design",
    tags: {
      category: "Design",
      date: "25 Feb, 2022",
    },
  },
  {
    image: "/images/blog-3.jpg",
    title: "How our company works in different ways",
    tags: {
      category: "Startup",
      date: "25 Feb, 2022",
    },
  },
];
---

<section id="blog">
  <p class="text-center">Latest News</p>
  <h2 class="h2 text-center">Our latest articles & resources</h2>
  <div class="blog_container section_container">
    {postsList.map((post) => <Card post={post} />)}
  </div>
</section>

<style>
  #blog .blog_container {
    gap: 2rem;
    display: grid;
    justify-content: center;
    padding: 1.2rem;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 250px), 350px));
  }
</style>
