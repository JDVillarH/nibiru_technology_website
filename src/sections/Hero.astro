<style>
  #hero {
    display: grid;
  }

  .arrow_down {
    width: 2rem;
    position: absolute;
    left: 0;
    right: 0;
    margin-inline: auto;
    color: var(--clr-red-crayola-300);
  }

  .hero_container {
    column-gap: 2rem;
    row-gap: 5rem;
    display: grid;
    align-items: center;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 460px), 1fr));
  }

  .hero_content {
    gap: 1rem;
    width: min(100%, 560px);
    margin-inline: auto;
  }

  .hero_container figure img {
    margin-inline: auto;
    width: min(30rem, 100%);
    /* animation: bounce linear 4s infinite; */
  }

  @media (max-width: 1024px) {
    #hero {
      text-align: center;
      padding-top: 3rem;
    }

    .flex-group {
      margin-inline: auto;
    }
  }
</style>
