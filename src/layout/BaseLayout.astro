---
import "@fontsource-variable/inter";
import "@fontsource/poppins";

import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import "../styles/global.css";
---

<html lang="es">
  <head>
    <title>Nibiru Technology - Creamos tu presencia en la web</title>
    <!-- Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Nibiru Technology" />
    <meta
      name="description"
      content="Creamos tu presencia en la web a la medida de tus requerimientos. conversa con nuestro equipo y comienza tu proyecto."
    />
    <meta
      name="keywords"
      content="diseño web, desarrollo web, sitios web personalizados, páginas web profesionales, desarrollo de sitios web en chile, diseño de sitios web en chile, diseño de páginas web en chile, diseño web responsive, diseño web SEO, creación de páginas web, servicios de desarrollo web, mantenimiento de sitios web"
    />
    <meta name="theme-color" content="#595bfb" />

    <!-- Close Meta Tags -->
    <!-- Open Graph Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Nibiru Technology" />
    <meta
      property="og:title"
      content="Nibiru Technology - Creamos tu presencia en la web"
    />
    <meta
      property="og:description"
      content="Creamos tu presencia en la web a la medida de tus requerimientos. conversa con nuestro equipo y comienza tu proyecto."
    />
    <meta property="og:locale" content="es_CL" />
    <meta property="og:locale:alternate" content="es_CO" />
    <meta property="og:image" content="/images/og-image.jpg" />
    <meta property="og:url" content="https://nibirutechnology.cl" />

    <!-- Close Open Graph Tags -->
    <link rel="shortcut icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
